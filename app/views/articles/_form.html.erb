<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
  <%= form_for(@article) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "My super interesting post", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content %>
      <%= f.text_area :content, placeholder: "Lorem ipsum dolor sit amet, consectetur adipisicing elit. Rerum...", class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.text_field :image, placeholder: "https://picsum.photos/200/300/?random", class: "form-control" %>
    </div>
    <%= f.submit class: "btn btn-primary" %>
  <% end %>
</div>

